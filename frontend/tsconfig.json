{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "@utils": ["src/common/utils/index"],
      "@utils/*": ["src/common/utils/*"],
      "@components": ["src/components/index"],
      "@components/*": ["src/components/*"],
      "@shared": ["src/components/shared/index"],
      "@shared/*": ["src/components/shared/*"],
      "@styles": ["src/assets/styles/index"],
      "@styles/*": ["src/assets/styles/*"],
      "@hooks": ["src/common/hooks/index"],
      "@hooks/*": ["src/common/hooks/*"],
      "@atoms": ["src/common/atoms/index"],
      "@atoms/*": ["src/common/atoms/*"],
      "@api": ["src/common/api/index"],
      "@api/*": ["src/common/api/*"],
      "@config": ["src/common/config/index"],
      "@config/*": ["src/common/config/*"],
      "@routes": ["src/common/routes/index"],
      "@routes/*": ["src/common/routes/*"],
      "@pages": ["src/pages/index"],
      "@pages/*": ["src/pages/*"],
      "@js/*": ["src/js/*"],
      "@constants": ["src/common/constants/index"],
      "@constants/*": ["src/common/constants/*"],
      "@store": ["src/common/store/index"],
      "@store/*": ["src/common/store/*"],
      "@selectors": ["src/common/selectors/index"],
      "@selectors/*": ["src/common/selectors/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.{test|spec}.tsx"]
}
